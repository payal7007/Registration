    function onSubmitForm() {
        event.preventDefault();

        if (validateForm()) {
            var formData = {
                firstName: $('#firstName').val(),
                lastName: $('#lastName').val(),
                userEmail: $('#userEmail').val(),
                Password: $('#Password').val(),
                MobileNo: $('#MobileNo').val(),
                Gender: $('input[name="Gender"]:checked').val(),
                Address: $('#Address').val(),
                City: $('#City').val()
            };

            $.ajax({
                type: 'POST',
                url: '/Home/Registration', // Replace with your actual controller action URL
                data: formData,
                success: function (response) {
                    if (response.success) {
                        console.log('Registration successful'); // Check if this message appears in the console
                        window.location.replace("/Home/About");
                    } else {
                        // Handle registration errors, display error messages, etc.
                        alert('Registration failed: ' + response.error);
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    // Handle AJAX error, display an error message, or log the error
                    alert('Error occurred during registration.');
                }
            });
        } else {

            return false;
        }
    }
