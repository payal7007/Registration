@model OlxDemo.Models.RegistrationModel

@{ ViewBag.Title = "Registration"; }

<div class="formbold-main-wrapper">

    <div class="formbold-form-wrapper">

        <img src="~/Image/OLX-Logo.png" style="height: 150px; width: 200px; margin: 0; padding: 5px;" class="class=" img-fluid"">

        <form method="POST" onsubmit="return onSubmitForm();">
            <div class="formbold-form-title">
                <h2 class="">Register now</h2>

            </div>

            <div class="formbold-input-flex">

                <div>
                    <label class="formbold-form-label"> First Name</label>

                    @Html.TextBoxFor(model => model.firstName, new { @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "error-message" })
                </div>
                <div>
                    <label class="formbold-form-label"> Last Name </label>
                    @Html.TextBoxFor(model => model.lastName, new { id = "lastName", @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "error-message" })

                </div>
            </div>

            <div class="formbold-input-flex">
                <div>
                    <label class="formbold-form-label"> Email </label>
                    @Html.TextBoxFor(model => model.userEmail, new { id = "userEmail", @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(model => model.userEmail, "", new { @class = "error-message" })

                </div>

                <div>
                    <label class="formbold-form-label"> Phone Number </label>
                    @Html.TextBoxFor(model => model.MobileNo, new { id = "MobileNo", @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "error-message" })

                </div>
            </div>

            <div class="formbold-mb-3">
                <label class="formbold-form-label"> Address </label>
                @Html.TextAreaFor(model => model.Address, new { id = "Address", @class = "formbold-form-input" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "error-message" })

            </div>

            <div class="formbold-mb-3">
                <label class="formbold-form-label"> city </label>
                @Html.DropDownListFor(model => model.City, new SelectList(new[]
                     {
                    new SelectListItem { Value = "Select City", Text = "Select City" },
                    new SelectListItem { Value = "Ahmedabad", Text = "Ahmedabad" },
                    new SelectListItem { Value = "Surat", Text = "Surat" },
                    new SelectListItem { Value = "Vadodara", Text = "Vadodara" },
                    new SelectListItem { Value = "Rajkot", Text = "Rajkot" }
                }, "Value", "Text"), new { id = "City", @class = "formbold-form-input" })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "error-message" })
            </div>

            <div class="formbold-input-flex">
                <div>
                    <label class="formbold-form-label"> Gender </label>

                    @Html.RadioButtonFor(model => model.Gender, "Male", new { id = "Gender" })<span> Male </span><br /><br />
                    @Html.RadioButtonFor(model => model.Gender, "Female", new { id = "Gender" })<span> Female </span><br />
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "error-message" })
                </div>
            </div>

            <div class="formbold-input-flex">
                <div>
                    <label class="formbold-form-label"> Password </label>
                    @Html.PasswordFor(model => model.Password, new { id = "Password", @class = "formbold-form-input" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error-message" })
                </div>
            </div>

            <div class="formbold-checkbox-wrapper">
                <label class="formbold-checkbox-label">
                    <div class="formbold-relative">
                        <input type="checkbox" name="checked" /> <span>
                            I agree to the defined
                            <a href="#">terms, conditions, and policies</a>
                        </span>
                    </div>
                </label>
            </div>


            <button type="submit" class="formbold-btn">Register Now</button>
        </form>
    </div>
</div>
